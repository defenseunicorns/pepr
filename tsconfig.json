{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "config/eslint.test.config.mjs",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "src/templates/*",
    "!src/templates/eslint.config.mjs",
    "integration/testroot"
  ]
}
