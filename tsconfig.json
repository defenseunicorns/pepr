{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules", "dist", "fixtures", "src/cli/init/templates", "pepr-test-module"]
}
