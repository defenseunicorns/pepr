{
  "*.ts": [
    "prettier --config .prettierrc --write",
    "eslint --fix --ignore-pattern src/templates/eslint.config.mjs "
  ],
  "*.mjs": [
    "prettier --config .prettierrc --write",
    "eslint --fix --ignore-pattern src/templates/eslint.config.mjs "
  ],
  "*.js": [
    "prettier --config .prettierrc --write",
    "eslint --fix --ignore-pattern src/templates/eslint.config.mjs "
  ],
  "*.json": ["prettier --config .prettierrc --write"],
  "*.sh": ["shellcheck -f tty"],
  ".husky/pre-*": ["shellcheck -f tty"],
  "*.md": [
    "markdownlint --fix --ignore adr --ignore integration/testroot --ignore pepr-test-module --ignore pepr-upgrade-test --ignore node_modules"
  ]
}
